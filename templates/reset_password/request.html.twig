{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe - PDFPro{% endblock %}

{% block body %}
<div class="max-w-md mx-auto py-12">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-dark-900 mb-2">Réinitialiser votre mot de passe</h1>
        <p class="text-dark-500">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
    </div>

    <div class="bg-white rounded-2xl p-8 shadow-sm border border-dark-100/10">
        {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                <label for="reset_password_request_type_email" class="block text-sm font-medium text-dark-700 mb-1.5">Adresse email</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-dark-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                        </svg>
                    </div>
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'block w-full rounded-xl border border-dark-200 py-3 pl-11 pr-3 text-dark-900 placeholder:text-dark-400 focus:border-primary-500 focus:outline-none focus:ring-1 focus:ring-primary-500 sm:text-sm shadow-sm',
                            'placeholder': 'exemple@email.com'
                        }
                    }) }}
                </div>
                {{ form_errors(requestForm.email) }}
            </div>

            <button type="submit" class="inline-flex items-center justify-center w-full px-6 py-3 text-base font-medium rounded-xl bg-primary-600 text-white hover:bg-primary-700 shadow-lg shadow-primary-100 transition-all">
                Envoyer le lien de réinitialisation
            </button>
        {{ form_end(requestForm) }}

        <div class="text-center mt-6">
            <p class="text-sm text-dark-500">
                <a href="{{ path('app_login') }}" class="text-primary-600 hover:text-primary-700 font-medium">
                    Retour à la connexion
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}